@model DapperDog.Models.HomeIndexViewModel
@{
    ViewBag.Title = "EditStaticPage";
}

<h2>Choose Static Page to Edit:</h2>

<div class="row">
    <div class="col-sm-8">
        <div class="column1">
            <div class="form-group">
               
                @foreach (var page in Model.StaticPages)
                {
                    <div id="StaticPageContent">
                        <h2 class="staticpagetitle">@page.StaticPageTitle</h2>
                        <input class="hidden" name="StaticPageID value=@page.StaticPageID"/>
                        @Html.Raw(page.StaticPageContent)
                    </div>

                    @Html.ActionLink("Edit Page", "EditStaticPage", "Blogs", new {id = page.StaticPageID}, new {@class = "btn btn-primary", id = page.StaticPageID})

                }
                    </div>
            </div>
    </div>
</div>
    